{
  "name": "cssu-rewards",
  "version": "0.0.1",
  "description": "CSSU Reward System",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "test": "cross-env NODE_PATH=. NODE_ENV=test jest --testTimeout=10000",
    "test:coverage": "cross-env NODE_PATH=. NODE_ENV=test jest --testTimeout=10000 --coverage",
    "seed": "node prisma/seed.js",
    "createsuperuser": "node prisma/createsu.js lyuxuany xuanyi.lyu@mail.utoronto.ca Lvxuanyi2003!",
    "clean": "rm -rf prisma/dev.db* node_modules package-lock.json prisma/migrations/",
    "k6:smoke": "k6 run ../load-testing/smoke.js",
    "k6:baseline": "k6 run ../load-testing/baseline.js",
    "k6:stress": "k6 run ../load-testing/stress.js"
  },
  "author": "CSC309 Student, Winter 2025",
  "license": "ISC",
  "dependencies": {
    "@faker-js/faker": "^9.6.0",
    "@prisma/client": "^6.5.0",
    "axios": "^1.10.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-jwt": "^8.5.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.10.0",
    "socket.io": "^4.8.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prisma": "^6.5.0",
    "supertest": "^7.1.1"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/prisma/",
      "/uploads/"
    ],
    "collectCoverageFrom": [
      "services/**/*.js",
      "controllers/**/*.js",
      "middlewares/**/*.js",
      "utils/**/*.js",
      "routes/**/*.js"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageDirectory": "coverage",
    "verbose": true
  }
}
